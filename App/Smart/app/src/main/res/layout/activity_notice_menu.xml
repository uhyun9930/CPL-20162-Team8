        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="일정관리"
        android:onClick="onSch"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="알림 관리"
        android:onClick="onNot"
        android:layout_weight="1"/>
