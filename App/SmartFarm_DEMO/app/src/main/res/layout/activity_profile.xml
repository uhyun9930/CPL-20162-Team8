<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profileback">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="4"
        android:text="프로필 사진"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/profile_"
        android:textColor="#000000"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/id"
        android:text="ID"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:background="@drawable/start_date"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:text="농장 개설일"
        android:id="@+id/date"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/plant"
        android:background="@drawable/information"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="식물\n번호"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/text_pid"
                android:gravity="center_vertical|center" />

            <TextView
                android:text="식물\n이름"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/textView2"
                android:gravity="center_vertical|center" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:id="@+id/horizontal_farmInfo_view"
            android:scrollbars="horizontal">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onInsert"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="@drawable/plus_sign"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
</LinearLayout>
