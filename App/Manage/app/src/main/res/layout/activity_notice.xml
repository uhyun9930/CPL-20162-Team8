<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alarmback"
    tools:context="com.example.and.manage.Notice">
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"/>
    <TableLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/tembtn"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:id="@+id/noticeTemp"
                android:onClick="onTempNotice"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/lightbtn"
                android:layout_weight="1"
                android:id="@+id/noticeLig"
                android:layout_margin="25dp"
                android:onClick="onLigNotice"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/moibtn"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:id="@+id/noticeMoi"
                android:onClick="onMoiNotice"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="25dp"
                android:id="@+id/noticeSoil"
                android:background="@drawable/soilbtn"
                android:onClick="onSoilNotice"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
