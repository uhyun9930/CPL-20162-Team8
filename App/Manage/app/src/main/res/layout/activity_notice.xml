<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.and.manage.Notice">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="온도 알림"
        android:id="@+id/noticeTemp"
        android:onClick="onTempNotice"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="습도 알림"
        android:id="@+id/noticeMoi"
        android:onClick="onMoiNotice"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="조도 알림"
        android:id="@+id/noticeLig"
        android:onClick="onLigNotice"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="토양습도 알림"
        android:id="@+id/noticeSoil"
        android:onClick="onSoilNotice"/>
</LinearLayout>
