<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profileback"
    tools:context="com.example.and.manage.Profile">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="4"
        android:text="프로필 사진"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/profile_"
        android:textColor="#000000"
        android:layout_weight="1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/id"
        android:text="ID"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/date"
        android:background="@drawable/start_date"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#000000"
        android:layout_weight="1"
        android:text="농장 개설일"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:id="@+id/plant"
        android:background="@drawable/information"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/android:list"
        android:layout_weight="2">

    </ListView>
    <Button
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onInsert"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:background="@drawable/plus_sign"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
</LinearLayout>
